{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "paths": {
      "kstyled": ["../runtime/src"],
      "babel-plugin-kstyled": ["../babel-plugin-kstyled/src"]
    }
  },
  "plugins": [
    {
      "name": "typescript-styled-plugin",
      "lint": {
        "validProperties": [
          "shadow-color",
          "shadow-opacity",
          "shadow-offset",
          "shadow-radius",
          "spread-radius",
          "padding-horizontal",
          "padding-vertical",
          "margin-vertical",
          "margin-horizontal",
          "tint-color",
          "aspect-ratio",
          "elevation",
          "blur-radius",
        ]
      }
    }
  ],
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
